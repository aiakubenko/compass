<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/alert_titleview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calibrate_alert_title"
        android:textSize="@dimen/alert_title_size"
        android:layout_marginTop="@dimen/alert_margin"
        android:layout_marginStart="@dimen/alert_margin"/>

    <TextView
        android:id="@+id/alert_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/calibrate_alert_text"
        android:textSize="@dimen/alert_text_size"
        android:layout_marginStart="@dimen/alert_margin"
        android:layout_marginEnd="@dimen/alert_margin" />

    <ImageView
        android:id="@+id/imageview_calibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/calibrate_device_img" />

</LinearLayout>
